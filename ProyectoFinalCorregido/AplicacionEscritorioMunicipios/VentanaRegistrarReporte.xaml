        <ListView HorizontalAlignment="Left" Height="200" Margin="30,141,0,0" VerticalAlignment="Top" Width="451">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="brn_guardar" Content="Guardar" HorizontalAlignment="Left" Margin="406,370,0,0" VerticalAlignment="Top" Width="75" FontSize="14" Click="btn_guardar_Click"/>
        <Button x:Name="btn_cancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="30,370,0,0" VerticalAlignment="Top" Width="75" FontSize="14" Click="btn_cancelar_Click"/>
        <Button x:Name="btn_foto" Content="Subir fotografía" HorizontalAlignment="Left" Margin="356,100,0,0" VerticalAlignment="Top" Width="125" FontSize="14"/>

    </Grid>
</Window>
